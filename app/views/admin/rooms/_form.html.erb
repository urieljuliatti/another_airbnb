<%= form_for [Room.new], url: admin_rooms_url, method: :post do |form| %>
  <% if room.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(room.errors.count, "error") %> proibido de serem salvos:</h2>

      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br />
  <div class="field mb-3">
    <%= form.label 'Título', style: "display: block" %>
    <%= form.text_field :title, class: 'form-control' %>
  </div><br />

  <div class="field">
    <%= form.label 'Descrição', style: "display: block" %>
    <%= form.text_area :body, class: 'form-control' %>
  </div><br />

  <div class="field">
    <%= form.label 'Preço', style: "display: block" %>
    <%= form.number_field :price, class: 'form-control' %>
    <br />
  </div>

  <div class="actions">
    <br />
    <%= form.submit 'Criar Quarto', class: 'btn btn-primary form-control' %>
  </div>
<% end %>