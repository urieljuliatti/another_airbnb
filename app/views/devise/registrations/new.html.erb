<main class="form-signin" style='width: 100%; max-width: 330px;padding: 15px; margin: auto;'>

<h2 class="h3 mb-3 fw-normal">Cadastrar-se</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>
  <br />
  <div class="field">
    <%= f.label :senha %>
    <% if @minimum_password_length %>
    <br />
    <em>(<%= @minimum_password_length %> mÃ­nimo de caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', style: 'margin:10px 0;' %>
  </div>
  <br />
  <div class="field">
    <%= f.label :confirmar_senha %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>
  <br />
  <main class="actions">
    <%= f.submit "Cadastrar", class: "w-100 btn btn-lg btn-primary form-control" %>
  </div>
<% end %>
<br />

</main>